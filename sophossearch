<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Search Articles</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 30px;
      background: #f5f8fc;
    }

    .container {
      max-width: 600px;
      margin: auto;
      position: relative;
    }

    #searchInput {
      width: 100%;
      padding: 14px 20px;
      font-size: 16px;
      border: 2px solid #4A90E2;
      border-radius: 30px;
      margin-bottom: 10px;
      outline: none;
      box-shadow: 0 3px 8px rgba(0,0,0,0.1);
      box-sizing: border-box;
    }

    #articleList {
      list-style: none;
      padding: 10px 0;
      margin: 0;
      font-size: 18px;
      background: white;
      border-radius: 15px;
      box-shadow: 0 4px 18px rgba(0,0,0,0.25);
      position: absolute;
      width: 100%;
      top: 60px;
      left: 0;
      z-index: 9999;
      display: none;
      max-height: 350px;
      overflow-y: auto;
      box-sizing: border-box;
    }

    #articleList li {
      margin: 10px 20px;
      padding: 10px;
      border-radius: 8px;
      background: #f0f4f8;
      transition: background 0.2s;
    }

    #articleList li:hover {
      background: #e0ebf5;
    }

    #articleList a {
      text-decoration: none;
      color: #333;
      display: block;
    }
  </style>
</head>
<body>
  <div class="container">
    <input id="searchInput" type="text" placeholder="Search articles..." autocomplete="off" />

    <ul id="articleList">
      <li><a href="https://sites.google.com/view/samplesophos/sophos-home?authuser=0" target="_blank" rel="noopener">• SOPHOSHOME</a></li>
      <li><a href="https://sites.google.com/view/samplesophos/general-faq?authuser=0" target="_blank" rel="noopener">• General FAQ</a></li>
    </ul>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const searchInput = document.getElementById("searchInput");
      const articleList = document.getElementById("articleList");
      const items = articleList.getElementsByTagName("li");

      searchInput.addEventListener("input", function () {
        const filter = searchInput.value.toLowerCase();
        let anyVisible = false;

        for (let i = 0; i < items.length; i++) {
          let txt = items[i].innerText.toLowerCase();
          if (txt.includes(filter) && filter.length > 0) {
            items[i].style.display = "block";
            anyVisible = true;
          } else {
            items[i].style.display = "none";
          }
        }

        articleList.style.display = anyVisible ? "block" : "none";
      });
    });
  </script>
</body>
</html>
